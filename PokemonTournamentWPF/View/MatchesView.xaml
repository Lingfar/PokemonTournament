<UserControl x:Class="PokemonTournamentWPF.View.MatchesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokemonTournamentWPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="550">
    <Grid>
        <DataGrid ItemsSource="{Binding Matches}" AutoGenerateColumns="False" FontSize="14" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Pokemon Vainqueur" Binding="{Binding PokemonVainqueur}"/>
                <DataGridTextColumn Header="Phase du tournoi" Binding="{Binding PhaseTournoi}"/>
                <DataGridTextColumn Header="Pokemon 1" Binding="{Binding Pokemon1}"/>
                <DataGridTextColumn Header="Pokemon 2" Binding="{Binding Pokemon2}"/>
                <DataGridTextColumn Header="Stade" Binding="{Binding Stade}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
