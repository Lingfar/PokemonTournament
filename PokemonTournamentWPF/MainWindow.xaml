<Window x:Class="PokemonTournamentWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonTournamentWPF"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Normal" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <!--<RowDefinition/>-->
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="DarkRed">
            <TextBlock Text="Pokemon Tournament" FontSize="30" HorizontalAlignment="Center" Foreground="White"/>
        </Grid>

        <Grid Grid.Row="1" Background="LightGray" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Name="btnPokemons" Content="Pokemons" FontSize="20" Width="200" Height="50" Grid.Column="0" Margin="5" Click="btn_Click"/>
            <Button Name="btnStades" Content="Stades" FontSize="20" Width="200" Height="50" Grid.Column="1" Margin="5" Click="btn_Click"/>
            <Button Name="btnMatchs" Content="Matchs" FontSize="20" Width="200" Height="50" Grid.Column="2" Margin="5" Click="btn_Click"/>
            <Button Name="btnCarac" Content="Caractéristiques" FontSize="20" Width="200" Height="50" Grid.Column="3" Margin="5" Click="btn_Click"/>
            <Button Name="btnBonus" Content="Bonus" FontSize="20" Width="200" Height="50" Grid.Column="4" Margin="5" Click="btn_Click"/>
        </Grid>

        <Grid Name="gridData" Grid.Row="2">
            <DataGrid Name="dataGridData" IsReadOnly="True" Grid.Row="0" Margin="2" MouseDown="dataGridData_MouseDown" AutoGeneratedColumns="dataGridData_AutoGeneratedColumns"/>
        </Grid>

        <Button Name="btnExportPokemons" Grid.Row="3" Content="Exporter tous les pokemons" Click="btnExportPokemons_Click" FontSize="20" Margin="5" Width="300" />
        <Button Name="btnAddStade" Grid.Row="3" Visibility="Collapsed" Content="Ajouter un nouveau stade" Click="btnAddStade_Click" FontSize="20" Margin="5" Width="300" />

        <!--<local:PokemonModel x:Name="pokeCtrl" Grid.Row="4" />
        <ListBox Name="lbData" Grid.Row="4">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:PokemonModel/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->
    </Grid>
</Window>
